<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ePSW</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="phonegap-plugin-push" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="src/assets/images/AppIcons/180x180.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="src/assets/images/AppIcons/60x60.png" width="60" height="60" />
        <icon src="src/assets/images/AppIcons/120x120.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="src/assets/images/AppIcons/76x76.png" width="76" height="76" />
        <icon src="src/assets/images/AppIcons/152x152.png" width="152" height="152" />
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="src/assets/images/AppIcons/40x40.png" width="40" height="40" />
        <icon src="src/assets/images/AppIcons/80x80.png" width="80" height="80" />
        <!-- iPhone / iPod Touch -->
        <icon src="src/assets/images/AppIcons/57x57.png" width="57" height="57" />
        <icon src="src/assets/images/AppIcons/114x114.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="src/assets/images/AppIcons/72x72.png" width="72" height="72" />
        <icon src="src/assets/images/AppIcons/144x144.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="src/assets/images/AppIcons/29x29.png" width="29" height="29" />
        <icon src="src/assets/images/AppIcons/58x58.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="src/assets/images/AppIcons/50x50.png" width="50" height="50" />
        <icon src="src/assets/images/AppIcons/100x100.png" width="100" height="100" />
    </platform>
    <plugin name="cordova-sqlite-storage" spec="https://github.com/brodysoft/Cordova-SQLitePlugin" />
</widget>
